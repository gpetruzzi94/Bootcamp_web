@{
}

<h1>Editar Stock</h1>


<div class="col-md-4">
    <form asp-action="Edit">
        <div class="form-group">
            <label class="control-label">Id</label>
            <input asp-for="stockDTO.Id" class="form-control" type ="hidden"/>
        </div>

        <div class="form-group">
            <label class="control-label">Cantidad</label>
            <input asp-for="stockDTO.Cantidad" class="form-control" />
        </div>
        <div class="dropdown">
            <label class="control-label">IdArticulo</label>
            <div class="dropdown">
                @Html.DropDownListFor(model => model.stockDTO.IdArticulo,
                Model.selectArticulosList,new {@class ="btn btn-secondary dropdown-toggle"})
            </div>
        </div>
        <div class="dropdown">
            <label class="control-label">IdDeposito</label>
            <div class="dropdown">
                @Html.DropDownListFor(model => model.stockDTO.IdDeposito,
                Model.selectDepositosList,new {@class ="btn btn-secondary dropdown-toggle"})
            </div>
        </div>

        <br />
        <div class="form.froup">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>

    </form>
</div>

<div class="container">
    <a asp-action="Index">Volver</a>
    <br />
    @if (Model.stockDTO.HuboError == true)
    {
        <div class="alert alert-danger" role="alert">
            <label>@ViewBag.Mensaje</label>
        </div>
    }

</div>